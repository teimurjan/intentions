{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ES2022", "DOM"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "../../prompts/*.json"],
	"exclude": ["node_modules", "dist"]
}
