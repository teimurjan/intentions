{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"lib": ["ESNext", "DOM", "WebWorker"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
